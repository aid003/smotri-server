generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id             Int       @id @default(autoincrement())
  title          String    @unique
  ratingFilm     String
  postersUrl     String
  yearCreate     String
  countries      String
  gendre         String
  content        String
  ageRestriction String
  description    String
  actors         String
  url            String
  TitleSeo       String
  DescriptionSeo String
  published      Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

