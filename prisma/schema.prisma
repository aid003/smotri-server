generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id             Int       @id @default(autoincrement())
  title          String    @unique
  ratingFilm     String
  novelty        String   
  postersUrl     String
  preview        String?
  photo          String   @default("default")
  yearCreate     String
  duration       String
  countries      String
  gendre         String
  content        String
  ageRestriction String
  description    String
  actors         String
  qualityUrls    Urls[]
  TitleSeo       String
  DescriptionSeo String
  KeywordsSeo    String?
  applicationNameSeo String?
  generatorSeo   String?
  referrerSeo    String?
  colorSchemeSeo String?
  creatorSeo     String?
  publisherSeo   String?
  published      Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Users {
  id             Int       @id @default(autoincrement())
  email String @unique
  password String
  role String
  accessToken String
  prime String
  reatedAt       DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Urls {
  id            Int       @id @default(autoincrement())
  quality       String
  url           String 
  voiceActing   String   
  video         Video?     @relation(fields: [videoId], references: [id]) 
  videoId       Int?
 
}